<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.detrening.detrening.Workout.DetailWorkout"
    android:background="@drawable/ah">

    <android.support.v7.widget.CardView
        android:id="@+id/crVW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/cyan"
            >
            <pl.droidsonroids.gif.GifImageView
            android:id="@+id/detailGif"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/bbbbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crVW">
        <TextView
            android:id="@+id/detailJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Gerakan"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="25dp"/>
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bbbbb"
        android:padding="8dp"
        android:background="@color/trans"

        >

        <TextView
            android:id="@+id/detailDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini deskripsi gerakannya"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="16dp"
            />

    </ScrollView>
</RelativeLayout>
