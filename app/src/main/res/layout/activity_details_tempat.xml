<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maps.details_tempat"
    android:background="@drawable/ah"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:backgroundTint="@color/trans"
            >

            <RelativeLayout
                android:id="@+id/relInfo"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/trans"
                android:backgroundTint="@color/trans"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/txtInf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Tempat"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    />

        <TextView
            android:id="@+id/snippetDet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snippet Intent"
            android:textSize="17dp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:maxLines="7"
            android:lines="7"
            android:layout_below="@id/txtInf"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:backgroundTint="@color/trans"
            android:layout_marginTop="10dp"
            >

        <TextView
            android:id="@+id/no_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--NA--"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:padding="7dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:backgroundTint="@color/trans"
            android:layout_marginTop="10dp"
            >


        <TextView
            android:id="@+id/jadwal_tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--NA--"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:padding="7dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:backgroundTint="@color/trans"
            android:layout_marginTop="10dp"
            >
        <TextView
            android:id="@+id/websiteTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--NA--"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:padding="7dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:backgroundTint="@color/trans"
            android:layout_marginTop="10dp"
            >
        <TextView
            android:id="@+id/idTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--NA--"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:padding="7dp"/>

        </android.support.v7.widget.CardView>


    </LinearLayout>

        <Button
            android:padding="8dp"
            android:id="@+id/btnDaftarMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Daftar Member"
            android:backgroundTint="@color/cyan"
            />
    </RelativeLayout>



</ScrollView>